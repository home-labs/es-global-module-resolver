{
  // to build, run: $ tsc -w on root path of the tsconfig.json
  "compilerOptions": {
    // genereted by $ tsc init
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "resolveJsonModule": true,
    "target": "ES2015",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/@actjs.on/es-global-module-resolver",
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true
  }
  , "include": [
    "package.json",
    ".npmignore"
  ]
  , "references": [
    {"path": "./src"}
  ]
}
